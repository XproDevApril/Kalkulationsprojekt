#include <LiquidCrystal.h>
#include <Keypad.h>
#include <SD.h>

LiquidCrystal lcd(8, 9, 4, 5, 6, 7); // Configura los pines para la pantalla LCD
Keypad keypad = Keypad(makeKeymap("1234567890*-/+=CHM"), A0, A1, A2, A3); // Configura el teclado de membrana

char input[16] = "";
char operand1[16] = "";
char operand2[16] = "";
char operation = 0;
boolean decimalPoint = false;

String history[5]; // Historial de operaciones
int historyIndex = 0;

File myFile; // Archivo en la tarjeta SD

void setup() {
  lcd.begin(16, 2); // Inicializa la pantalla LCD (16 columnas x 2 filas)
  lcd.setCursor(0, 0);
  lcd.print("Calculadora Arduino");
  delay(2000); // Espera 2 segundos para mostrar el mensaje de bienvenida

  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Ingrese operacion");

  // Inicializar la tarjeta SD
  if (!SD.begin(10)) {
    lcd.clear();
    lcd.print("Error SD");
    delay(2000);
  }
}

void loop() {
  char key = keypad.getKey();
  if (key != NO_KEY) {
    if (key == 'C') {
      clearInput();
    } else if (key == '=') {
      calculate();
    } else if (key == 'H') {
      displayHistory();
    } else if (key == 'M') {
      saveToMemory();
    } else if (key == 'B') {
      loadFromMemory();
    } else if (key == 'A') {
      // Agregar otras funciones y operaciones personalizadas aquí
    } else {
      addToInput(key);
    }
  }
  updateDisplay();
}

void addToInput(char key) {
  if (strlen(input) < 16) {
    if (key >= '0' && key <= '9') {
      strcat(input, &key);
    } else if (key == '.' && !decimalPoint) {
      strcat(input, ".");
      decimalPoint = true;
    } else if (key == '+' || key == '-' || key == '*' || key == '/') {
      if (operation == 0) {
        strcpy(operand1, input);
        operation = key;
        clearInput();
      }
    }
  }
}

void clearInput() {
  strcpy(input, "");
  decimalPoint = false;
}

void calculate() {
  if (operation && strlen(operand1) > 0 && strlen(input) > 0) {
    float num1 = atof(operand1);
    float num2 = atof(input);
    float result = 0;

    switch (operation) {
      case '+':
        result = num1 + num2;
        break;
      case '-':
        result = num1 - num2;
        break;
      case '*':
        result = num1 * num2;
        break;
      case '/':
        if (num2 != 0) {
          result = num1 / num2;
        } else {
          lcd.clear();
          lcd.print("Error: Div/0");
          delay(2000);
          clearInput();
          return;
        }
        break;
    }

    dtostrf(result, 8, 2, input);
    operation = 0;
    strcpy(operand1, input);
    clearInput();

    // Agregar la operación al historial
    if (historyIndex < 5) {
      history[historyIndex] = operand1 + " " + operation + " " + input + " = " + dtostrf(result, 8, 2);
      historyIndex++;
    }
  }
}

void displayHistory() {
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Historial:");
  for (int i = 0; i < historyIndex; i++) {
    lcd.setCursor(0, i + 1);
    lcd.print(history[i]);
  }
}

void saveToMemory() {
  myFile = SD.open("calculadora.txt", FILE_WRITE);
  if (myFile) {
    for (int i = 0; i < historyIndex; i++) {
      myFile.println(history[i]);
    }
    myFile.close();
    lcd.clear();
    lcd.print("Guardado en SD");
    delay(2000);
  } else {
    lcd.clear();
    lcd.print("Error SD");
    delay(2000);
  }
}

void loadFromMemory() {
  myFile = SD.open("calculadora.txt", FILE_READ);
  if (myFile) {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("Historial:");
    int i = 0;
    while (myFile.available()) {
      String line = myFile.readStringUntil('\n');
      lcd.setCursor(0, i + 1);
      lcd.print(line);
      i++;
    }
    myFile.close();
    delay(4000); // Mostrar historial durante 4 segundos
  } else {
    lcd.clear();
    lcd.print("Error SD");
    delay(2000);
  }
}

void updateDisplay() {
  lcd.setCursor(0, 1);
  lcd.print("                ");
  lcd.setCursor(0, 1);
  lcd.print(input);
}
